<style>
    * {
        font-family: Arial, Helvetica, sans-serif;
        color: #444;
    }
    ul {
        list-style: none;
    }
    a {
        text-decoration: none;
        /* color: #999; */
    }
    #main-container {
        margin: auto;
        max-width: 400px;
    }
</style>

<div id="main-container">
    <h1>Ma todolist</h1>

    <ul>
        <% todos.forEach(todo => { %>
            <li><span><a href="/del/<%= todo.id %>">&#10007;</a></span><%= todo.todo %></li>
        <% }) %>
    </ul>
    
    <form method="POST" action="/add">
        <label>Que dois-je faire ?</label>
        <input type="text" name="todoInput"/>
        <button type="submit">Valider</button>
    </form>
</div>